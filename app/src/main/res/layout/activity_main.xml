<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#34495e"
    android:id="@+id/mainLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Study Time"
            android:id="@+id/studyTitleTextView"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/breakTitleTextView"
            android:layout_alignStart="@+id/breakTitleTextView"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5m"
            android:id="@+id/studyTimeTextView"
            android:textColor="#ffffff"
            android:textSize="75dp"
            android:layout_below="@+id/studyTitleTextView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/studyTimeSeekBar"
            android:indeterminate="false"
            android:layout_below="@+id/studyTimeTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/breakTimeSeekBar"
            android:layout_alignEnd="@+id/breakTimeSeekBar"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Break Time"
            android:id="@+id/breakTitleTextView"
            android:textColor="#ffffff"
            android:layout_below="@+id/studyTimeSeekBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5m"
            android:id="@+id/breakTimeTextView"
            android:textColor="#ffffff"
            android:textSize="75dp"
            android:layout_below="@+id/breakTitleTextView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/breakTimeSeekBar"
            android:indeterminate="false"
            android:layout_below="@+id/breakTimeTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/startButton"
            android:layout_alignEnd="@+id/startButton"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Start Revising"
            android:id="@+id/startButton"
            android:textColor="#34495e"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:height="70dp" />
    </LinearLayout>

</RelativeLayout>
